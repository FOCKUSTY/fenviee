{
	"compilerOptions": {
		"target": "es2024",
		"module": "CommonJS",
		"rootDir": "./",
		"baseUrl": "./",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}